{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Debug with uvicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.app:app",
        "--host",
        "0.0.0.0",
        "--port",
        "3200",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/.venv/bin/python"
    }
  ]
}
